# GONADS Preview - Environment Variables
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ==============================================
# BRAND CONFIGURATION
# ==============================================
NEXT_PUBLIC_BRAND_NAME=GONADS
NEXT_PUBLIC_BRAND_TAGLINE="Balls to the Wall DeFi"
NEXT_PUBLIC_PREVIEW_MODE=true

# ==============================================
# DEPLOYMENT
# ==============================================
NEXT_PUBLIC_APP_URL=https://gonads.preview.machups.com
NEXT_PUBLIC_API_URL=https://api.gonads.io

# ==============================================
# VERCEL (for deployment)
# ==============================================
# Get these from Vercel dashboard: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_org_id_here
VERCEL_PROJECT_ID=your_project_id_here

# ==============================================
# ANALYTICS (Optional)
# ==============================================
# Vercel Analytics (automatically enabled on Vercel)
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==============================================
# WEB3 / BLOCKCHAIN (Optional for future)
# ==============================================
# Monad RPC
NEXT_PUBLIC_MONAD_RPC_URL=https://rpc.monad.xyz
NEXT_PUBLIC_MONAD_CHAIN_ID=10143

# Thirdweb
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_client_id

# NFT Contract Address (deployed on Monad)
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x...

# ==============================================
# EMAIL & NOTIFICATIONS (Optional)
# ==============================================
# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@gonads.io

# Resend
RESEND_API_KEY=re_xxxxxxxxxxxx

# ==============================================
# DATABASE (Optional for waitlist/analytics)
# ==============================================
# PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/gonads

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxx...
SUPABASE_SERVICE_ROLE_KEY=eyJxxx...

# ==============================================
# FEATURE FLAGS
# ==============================================
NEXT_PUBLIC_ENABLE_WALLET_CONNECTION=false
NEXT_PUBLIC_ENABLE_MINTING=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true

# ==============================================
# SOCIAL LINKS
# ==============================================
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/gonads
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/gonads
NEXT_PUBLIC_GITHUB_URL=https://github.com/gonads

# ==============================================
# CONTENT MODERATION (Optional)
# ==============================================
# OpenAI for content moderation
OPENAI_API_KEY=sk-xxxxxxxxxxxx

# ==============================================
# NOTES
# ==============================================
# 1. Never commit .env.local to git
# 2. Add .env.local to .gitignore
# 3. Share secrets securely via password manager
# 4. Rotate API keys regularly
# 5. Use different keys for dev/staging/prod
