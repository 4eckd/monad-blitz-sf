{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MACHUPS Brand Schema",
  "description": "Schema for AI-generated brand packages from MACHUPS",
  "version": "1.0.0",
  "type": "object",
  "required": ["brandName", "generatedAt", "version"],
  "properties": {
    "brandName": {
      "type": "string",
      "description": "The name of the generated brand",
      "minLength": 1,
      "maxLength": 100
    },
    "tagline": {
      "type": "string",
      "description": "Brand tagline or slogan",
      "maxLength": 200
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the brand was generated"
    },
    "generationTime": {
      "type": "string",
      "description": "Time taken to generate (e.g., '2m 47s')"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (semver)"
    },
    "input": {
      "type": "object",
      "required": ["businessIdea", "targetAudience", "style"],
      "properties": {
        "businessIdea": {
          "type": "string",
          "description": "User's business idea description"
        },
        "targetAudience": {
          "type": "string",
          "description": "Target customer segment"
        },
        "style": {
          "type": "string",
          "description": "Desired visual style"
        },
        "features": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Key features or requirements"
        }
      }
    },
    "logos": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "object",
        "required": ["type", "url", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["wordmark", "icon", "combination"],
            "description": "Logo type"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL to logo image"
          },
          "description": {
            "type": "string",
            "description": "Logo description"
          },
          "formats": {
            "type": "object",
            "properties": {
              "png": { "type": "string", "format": "uri" },
              "svg": { "type": "string", "format": "uri" }
            }
          }
        }
      }
    },
    "colors": {
      "type": "object",
      "required": ["primary", "secondary", "neutral"],
      "properties": {
        "primary": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        },
        "secondary": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        },
        "neutral": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        },
        "semantic": {
          "type": "object",
          "properties": {
            "success": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "error": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "warning": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "info": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
          }
        }
      }
    },
    "typography": {
      "type": "object",
      "required": ["heading", "body"],
      "properties": {
        "heading": {
          "type": "string",
          "description": "Font family for headings"
        },
        "body": {
          "type": "string",
          "description": "Font family for body text"
        },
        "mono": {
          "type": "string",
          "description": "Monospace font family (optional)"
        }
      }
    },
    "designTokens": {
      "type": "object",
      "description": "W3C DTCG-compliant design tokens",
      "additionalProperties": true
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "code", "filename"],
        "properties": {
          "name": { "type": "string" },
          "code": { "type": "string" },
          "filename": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "documentation": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to deployed documentation site"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "content": { "type": "string" }
            }
          }
        }
      }
    },
    "penpotFile": {
      "type": "object",
      "properties": {
        "fileId": { "type": "string" },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to Penpot design file"
        }
      }
    },
    "nft": {
      "type": "object",
      "properties": {
        "tokenId": { "type": "string" },
        "contractAddress": { "type": "string" },
        "txHash": { "type": "string" },
        "network": {
          "type": "string",
          "enum": ["monad-testnet", "monad-mainnet"]
        },
        "openseaUrl": { "type": "string", "format": "uri" },
        "metadata": { "type": "object" }
      }
    },
    "downloadUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to download complete brand package (ZIP)"
    }
  }
}
